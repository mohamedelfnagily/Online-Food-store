<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">@ViewBag.prod.Name</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active text-center">
                            <img src="~/KitchenImages/@ViewBag.prod.Image1" height="350"  class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item text-center">
                            <img src="~/KitchenImages/@ViewBag.prod.Image2" height="350"  class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item ">
                            <img src="~/KitchenImages/@ViewBag.prod.Image3" height="350"  class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                        <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <h5 class="mt-3">@ViewBag.prod.Description</h5>
                <small class="mb-2">This product is available, after one day it will be ready on your door step.</small>
                <div class="d-flex  small text-warning mb-2">
                    @for (int j = 0; j < ViewBag.prod.Rating; j++)
                    {
                        <div class="bi-star-fill"><i class="fa-solid fa-star text-warning"></i></div>
                    }

                </div>
                <!-- Product price-->
                @if (ViewBag.prod.OnSale == "true")
                {
                    <span class="text-muted text-decoration-line-through text-decoration-line-through">@ViewBag.prod.Price<span class="text-lead">$</span></span>
                }
                @ViewBag.prod.Price<span class="text-lead">$</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <div class=" pt-0 border-top-0 bg-transparent">
                    <div class="text-center"><a asp-action="AddToCart" asp-controller="Cart" asp-route-ProdId="@ViewBag.prod.Id" class="btn btn-outline-dark ">Add to cart</a></div>
                </div>
            </div>
        </div>
    </div>
</div>